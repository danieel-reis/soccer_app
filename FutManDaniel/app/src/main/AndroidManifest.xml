<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="daniel.ufop.com.br.futmandaniel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_bola"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bola"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Opening">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity android:name=".ControlGame"
            android:screenOrientation="portrait"/>
        <activity android:name=".GameAdd"/>
        <activity android:name=".GameEdit"/>
        <activity android:name=".GameOptions"/>
        <activity android:name=".PlayerAdd"/>
        <activity android:name=".PlayerEdit"/>
        <activity android:name=".SelectPlayers"/>
    </application>

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>